<%= form_with scope: :profile, url: user_path(@user.id), method: :put, local: true do |f| %>
  <%= f.label :owner_name %>
  <%= f.text_field :owner_name, placeholder: @user.owner_name %>
  <br>
  <%= f.label :dog_name, "Name" %>
  <%= f.text_field :dog_name, placeholder: @user.dog_name %>
  <br>
  <%= f.label :breed %>
  <%= f.text_field :breed, placeholder: @user.breed %>
  <br>
  <%= f.label :bio, "Biography" %>
  <%= f.text_field :bio, placeholder: @user.bio %>
  <br>
  <%= f.submit "Update Profile" %>
<% end %>

<%= button_to "Delete Account", user_path(current_user.id), method: :delete, :data => {:confirm => 'Are you sure?'} %>