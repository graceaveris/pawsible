<div class="jumbotron jumbotron-fluid">
  <h1 class="display-4 text-light">Welcome to Pawsible!</h1>
  <p class="lead text-light">Lorem ipsum.</p>
</div>

<div class="container">
  <%# to show top 3 dogs in carousel way %>
  <section class="my-5 py-5">
    <div align="center">
      <h1>Top Dogs</h1>
    </div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner my-4">
        <% @top_dog.each_with_index do |dog, index| %>
          <% if index > 0 %>
            <div class="carousel-item">
              <div class="row">
                <div class="col-sm-6">
                  <% if !dog.profile_pic.file.nil? %>
                    <%= image_tag dog.profile_pic.url.to_s, class:"d-block carousel-img img-fluid"%>
                  <% else %>
                    <%= image_tag "profile_pic.png", class:"d-block carousel-img img-fluid" %>
                  <% end %>
                </div>
                <div class="col-sm-6">
                  <div class="carousel-caption d-none d-md-block">
                    <h5><%= dog.dog_name%></h5>
                    <p>Status: <%= dog.status %></p>
                    <p>Ranking: <%= index + 1 %></p>  
                    <p>Onwed By: <%= dog.owner_name %></p> 

                    <%= button_to "View Profile", user_path(dog.id), method: :get, class:"btn btn-primary" %>
                  </div>
                </div>
              </div>
            </div>
          <% else %>
            <div class="carousel-item active">
              <div class="row">
                <div class="col-sm-6">
                  <% if !dog.profile_pic.file.nil? %>
                    <%= image_tag dog.profile_pic.url.to_s, class:"d-block carousel-img img-fluid", alt:"First Slide"%>
                  <% else %>
                    <%= image_tag "profile_pic.png", class:"d-block carousel-img img-fluid", alt:"First Slide" %>
                  <% end %>
                </div>
                <div class="col-sm-6">
                  <div class="carousel-caption d-none d-md-block">
                    <h5><%= dog.dog_name%></h5>
                    <p>Status: <%= dog.status %></p>
                    <p>Ranking: <%= index + 1 %></p>  
                    <p>Onwed By: <%= dog.owner_name %></p> 

                    <%= button_to "View Profile", user_path(dog.id), method: :get, class:"btn btn-primary" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </section>
  <%# to show the latest 8 feed by dogs and have a button to link to feeds page when > 0 %>

  <section class="my-5 py-5">
    <div align="center">
      <h1 class="my-4">Dog Feeds</h1>
    </div>
    <% if @uploads.size > 0 %>
      <div class="row">
        <% @uploads.each do |upload| %>
          <div class="col-sm-6 col-lg-4">
            <div class="card mb-4">

              <% if !upload.media.file.nil? %>
                <% if %w(mp4).include?(upload.media.file.extension.downcase) %>
                  <a href="<%= upload_path(upload.id) %>" class="card-img-top">
                    <video controls="controls" preload="none" src="<%= upload.media.url %>" width="100%" poster="<%= upload.media.thumb.url %>"></video>
                  </a>
                <% elsif %w(jpg jpeg gif png).include?(upload.media.file.extension.downcase) %>
                  <%= link_to image_tag(upload.media.url.to_s, class: 'card-img-top'), upload_path(upload.id) %>
                <% end %>
              <% end %>

              <div class="card-body">

                <p class="lead"><%= upload.challenge.title%> </p> 
                <p>Completed By: <%= upload.user.dog_name %></p> 
                <p>Status: <%= upload.user.status %></p>
                <p>Owned By: <%= upload.user.owner_name %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="my-4" align="center">
        <%= button_to "View All Feeds", uploads_path, method: :get, class:"btn btn-primary"%>
      </div>
    <% end %>  
  </section>

  <%# to show the top 10 dogs in leaderboard way and a button to link to the full leaderboard when > 0 %>
  <section class="my-5 py-5">
    <div align="center">
      <h1 class="my-4">Leaderboard</h1>
    </div>
    <% if @leaderboard.size > 0 %>
      <table class="table">
        <thead class="thead-dark" align="center">
            <tr>
              <th scope="col">Ranking</th>
              <th scope="col">Name</th>
              <th scope="col">Badge</th>
              <th scope="col">Points</th>
              <th scope="col">Owner</th>
              <th scope="col">View Profile</th>
            </tr>
        </thead>
        <tbody align="center">
          <% @leaderboard.each_with_index do |dog, index| %>
            <tr>
              <td><%= index + 1 %></td> 
              <td><%= dog.dog_name %></td>
              <td><%= image_tag(dog.badge, class:"mini-badge")%></td>
              <td><%= dog.total_points %></td> 
              <td><%= dog.owner_name %></td>
              <td><%= button_to "View Profile", user_path(dog.id), method: :get, class:"btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="my-4" align="center">
        <%= button_to "View Full Leaderboard", leaderboard_path, method: :get, class:"btn btn-primary"%>
      </div>
    <% end %>
  </section>
  
</div>