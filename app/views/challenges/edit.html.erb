<%= form_with scope: :edit_challenges, url: challenge_path(@challenge.id), method: :put, local: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.label :points %>
  <%= f.number_field :points, min: 0 %>
  <br>
  <%= f.label :sponsor %>
  <%= f.text_field :sponsor %>
  <br>
  <%= f.submit %>
<% end %>